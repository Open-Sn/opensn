[flake8]
ignore = E203, E266, W503, C901, E741
max-line-length = 100
max-complexity = 18
select = B,C,E,F,W,T4,B9
extend-exclude = build*

per-file-ignores =
    test/python/*.py: F401, F821
    tools/scaling/sweep/node_to_node/unstructured_mesh/weak/weak_scaling.py: F401, F821
    tools/scaling/sweep/node_to_node/unstructured_mesh/strong/strong_scaling.py: F401, F821
